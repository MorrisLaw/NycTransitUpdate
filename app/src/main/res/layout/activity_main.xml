        <ImageButton
            android:id="@+id/imageButtonSBlue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="5"
            android:layout_row="3"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:contentDescription="Logo for the S line."
            app:srcCompat="@drawable/s_train_logo" />

        <ImageButton
            android:id="@+id/imageButtonL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="6"
            android:layout_row="0"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:contentDescription="Logo for the L line."
            app:srcCompat="@drawable/l_gray_logo" />

        <ImageButton
            android:id="@+id/imageButtonT"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="6"
            android:layout_row="1"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:contentDescription="Logo for the T line."
            app:srcCompat="@drawable/t_train_logo" />

        <ImageButton
            android:id="@+id/imageButtonG"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="6"
            android:layout_row="2"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:contentDescription="Logo for the G line."
            app:srcCompat="@drawable/g_train_logo" />

        <ImageButton
            android:id="@+id/imageButtonOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#0000"
            android:contentDescription="Logo for the 1 line."
            android:elevation="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/one_train_logo" />

        <ImageButton
            android:id="@+id/imageButtonSeven"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="3"
            android:background="#0000"
            android:contentDescription="Logo for the 7 line."
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/seven_train_logo" />

    </GridLayout>
</LinearLayout>
